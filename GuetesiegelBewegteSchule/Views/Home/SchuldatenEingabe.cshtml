@{
    Layout = "~/Views/Shared/_Layout_Start.cshtml";
    ViewBag.Title = "Daten Eingabe";

}


<div id="top" class="jumbotron">
    <style>
        h3#text1 {
        }

        div#top {
            background-color: white;
            text-align: left;
        }

        input {
            width: 700px;
        }

        button#btnDropDown{
            width: 150px;
        }
    </style>

    <script 
            src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js">
    </script>

    <script>
        function CheckInput() {
            var IDs = [
                    "inputSchulname",
                    "InputLehrer",
                    "inputPLZ",
                    "inputOrt",
                    "InputStrasse",
                    "InputTelefon",
                    "inputEmail",
            ];

            var check = 1;

            for (i = 0; i < IDs.length; i++) {
                var x = document.getElementById(IDs[i]);

                if (x.value == "") {
                    alert("Ein oder mehrere Felder enthalten keine Eingaben");
                    check = 0;
                    break;
                }
            }

            if (check == 1) {
                var url = '@Url.Action("Uebersicht", "Home")';
                window.location.href = url;
                
            }
        }

        $(document).ready(function () {
            $("#laenderList li a").click(function () {
                var btn = document.getElementById("btnDropDown");
                var selText = $(this).text();
                btn.textContent = selText;
            });
        });


    </script>

    <img src="@Url.Content("~/Images/logo_bewegte_schule_klein.png")">

    <h3 id="text1">Grunddateneingaben</h3>
    <h4 id="text2">Sie können hier die Grunddaten ihrer Schule eingeben.</h4>
    <hr />

    <table style="width:70%">
        <tr>
            <td>Schulname*:</td>
            <td><input type="text" id="inputSchulname" name="inputSchulname"></td>
        </tr>
        <tr>
            <td>Bundesland*:</td>
            @*<td><input type="text" id="inputBundesland" name="inputBundesland"></td>*@
            <td>
                <div class="dropdown">

                    <button id="btnDropDown" class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                        Burgenland
                        <span class="caret"></span>
                    </button>

                    <ul id="laenderList" class="dropdown-menu">
                        <li><a href="#">Burgenland</a></li>
                        <li><a href="#">Kärnten</a></li>
                        <li><a href="#">Niederösterreich</a></li>
                        <li><a href="#">Oberösterreich</a></li>
                        <li><a href="#">Salzburg</a></li>
                        <li><a href="#">Steiermark</a></li>
                        <li><a href="#">Tirol</a></li>
                        <li><a href="#">Vorarlberg</a></li>
                        <li><a href="#">Wien</a></li>
                    </ul>

                </div>
                @*<select id="myselect">
                        <option value="1">value1</option>
                        <option value="2" selected="selected">value2</option>
                        <option value="3">value3</option>
                    </select>*@
            </td>
        </tr>
        <tr>
            <td>Verantwortlicher Lehrer*:</td>
            <td><input type="text" id="InputLehrer" name="InputLehrer"></td>
        </tr>
    </table>

    <hr />
    <h4>Schuladresse</h4>
    <hr />

    <table style="width:85%">
        <tr>
            <td>PLZ*:</td>
            <td><input type="text" id="inputPLZ" name="inputPLZ"></td>
        </tr>
        <tr>
            <td>Ort*:</td>
            <td><input type="text" id="inputOrt" name="inputOrt"></td>
        </tr>
        <tr>
            <td>Straße / Nr:</td>
            <td><input type="text" id="InputStrasse" name="InputStrasse"></td>
        </tr>
        <tr>
            <td>Telefonnummer*:</td>
            <td><input type="text" id="InputTelefon" name="InputTelefon"></td>
        </tr>
        <tr>
            <td>E-Mail Adresse*:</td>
            <td><input type="text" id="inputEmail" name="InputEmail"></td>
        </tr>
    </table>

    <hr />
    <h4>Pflichtangaben sind mit * gekennzeichnet</h4>
    <hr />

    <p class="lead"></p>

    <p onclick="CheckInput()" class="btn btn-primary btn-lg" Weiter &raquo;>Weiter</p>
</div>
